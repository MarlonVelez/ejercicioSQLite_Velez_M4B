<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="352dp"
            android:layout_height="148dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:cardElevation="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="131dp"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="117dp"
                    android:layout_height="138dp" tools:srcCompat="@drawable/user"
                    android:id="@+id/imgUser" android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="203dp"
                android:layout_height="139dp" android:layout_marginStart="140dp" android:padding="1dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/label_idCliente" android:padding="1dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/label_cedulaCliente"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/label_nombreCliente" android:padding="1dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/label_correoCliente" android:padding="1dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/label_telefonoCliente" android:padding="1dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>